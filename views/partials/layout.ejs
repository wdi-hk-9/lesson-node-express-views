<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
  <title>Candy App</title>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="stylesheets/main.css" />
</head>

<body>
  <h1>
    <a target="_blank" href="https://www.youtube.com/watch?v=mKli0y-Xr-Q">Candy Shoppe</a>
  </h1>

  <div class="container">
    <div class="row">
      <% candies.forEach(function(candy) { %>
        <div class="col-xs-4 well candy">
          <div><b>Name : </b>  <%- link_to(candy.name, '/candies/'+ candy._id) %></div>
          <div><b>Color : </b> <%= candy.color %></div>
        </div>
      <% }) %>
    </div>
  </div>

  <div class="container">
    <% include candies/form %>
  </div>

  <div class="container">
    <% include footer %>
  </div>
</body>
</html>
